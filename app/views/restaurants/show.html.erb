<div class="container">
  <h1><%= @restaurant.name %> <small><%= @restaurant.address %></small></h1>
  <h2>
    <%= pluralize @restaurant.reviews.size, "review" %>
  </h2>

  <div id="reviews">
    <% if @restaurant.reviews.blank? %>
      Be the first to leave a review for <%= @restaurant.name %>
    <% else %>
      <% @restaurant.reviews.each do |review| %>
        <p><%= review.content %></p>
      <% end %>
    <% end %>
    <%= simple_form_for([ @restaurant, @review ], remote: true, data: { 'turbolinks-scroll': false } ) do |f| %>
      <%= f.input :content %>
      <%= f.button :submit %>
    <% end %>
  </div>

</div>
